{
  "name": "luxury-retail-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/app1-product-list",
    "packages/app2-product-detail",
    "packages/app3-order-cart",
    "packages/container-app",
    "packages/shared-lib",
    "packages/electron-app",
    "packages/nextjs-app"
  ],
  "scripts": {
    "dev:app1": "npm run dev --workspace=packages/app1-product-list",
    "dev:app2": "npm run dev --workspace=packages/app2-product-detail",
    "dev:app3": "npm run dev --workspace=packages/app3-order-cart",
    "dev:container": "npm run dev --workspace=packages/container-app",
    "dev:nextjs": "npm run dev --workspace=packages/nextjs-app",
    "dev:all": "./start-all-platforms.sh",
    "build:all": "npm run -ws build",
    "build:shared": "npm run build --workspace=packages/shared-lib",
    "ios:build": "npm run build:ios --workspace=packages/container-app",
    "mac:build": "./build-mac-app.sh",
    "win:build": "./build-windows-app.sh",
    "all:build": "./build-all-platforms.sh"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
